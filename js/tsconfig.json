    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
  },
  "exclude": [
    "src",
    "examples",
    "dist",
    "node_modules"
  ],
  "references": [
    {
      "path": "./src/tsconfig.src.json",
    },
    {
      "path": "./examples/tsconfig.examples.json",
    }
  ]
}