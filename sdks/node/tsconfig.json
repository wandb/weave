{
  "compilerOptions": {
    "composite": true,
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "paths": {
      "weave": ["./src/index.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src", "examples", "dist", "node_modules"],
  "references": [
    {
      "path": "./src/tsconfig.src.json"
    },
    {
      "path": "./examples/tsconfig.examples.json"
    }
  ]
}
