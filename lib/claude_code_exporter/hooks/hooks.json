{
  "description": "Export Claude Code session traces to W&B Weave for observability",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --quiet --script \"${CLAUDE_PLUGIN_ROOT}/scripts/hook_handler.py\"",
            "timeout": 30
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --quiet --script \"${CLAUDE_PLUGIN_ROOT}/scripts/hook_handler.py\"",
            "timeout": 10
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --quiet --script \"${CLAUDE_PLUGIN_ROOT}/scripts/hook_handler.py\"",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --quiet --script \"${CLAUDE_PLUGIN_ROOT}/scripts/hook_handler.py\"",
            "timeout": 10
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --quiet --script \"${CLAUDE_PLUGIN_ROOT}/scripts/hook_handler.py\"",
            "timeout": 10
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --quiet --script \"${CLAUDE_PLUGIN_ROOT}/scripts/hook_handler.py\"",
            "timeout": 10
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --quiet --script \"${CLAUDE_PLUGIN_ROOT}/scripts/hook_handler.py\"",
            "timeout": 10
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --quiet --script \"${CLAUDE_PLUGIN_ROOT}/scripts/hook_handler.py\"",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
